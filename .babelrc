{
    "presets": ["@babel/preset-env", "@babel/preset-react"],
    "plugins": [
      [
        "babel-plugin-root-import",
        {
          "paths":[
            {
              "rootPathSuffix": "./src/",
              "rootPathPrefix": "~src/"
            },
            {
              "rootPathSuffix": "./assets/",
              "rootPathPrefix": "~assets/"
            },
            {
              "rootPathSuffix": "./src/js/components/",
              "rootPathPrefix": "~components/"
            }
          ]
        }
      ]
    ]
}