{
    "allowJs": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "~/*": ["src/*"],
        "~assets/*": ["assets/*"],
        "~components/*": ["src/js/components/*"],
        "~lib/*": ["lib/*"]
      }
    },
    "exclude": ["node_modules", "**/node_modules/*",  "dist", "config", ".vscode"]
  }